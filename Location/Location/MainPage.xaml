<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Location"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="Location.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3.333*"></RowDefinition>
            <RowDefinition Height="3.333*"></RowDefinition>
            <RowDefinition Height="3.333*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackLayout Grid.Row="0" VerticalOptions="StartAndExpand" Padding="30">
            <maps:Map WidthRequest="420" HeightRequest="350"
                      x:Name="TestMap"
                      IsShowingUser="True"
                      MapType="Satellite">
            </maps:Map>
        </StackLayout>
        <StackLayout Grid.Row="2">
            <Label x:Name="txtLat" Text="Breitengrad: " VerticalOptions="Center" HorizontalOptions="Center"></Label>
            <Label x:Name="txtLong" Text="Längengrad" VerticalOptions="Center" HorizontalOptions="Center"></Label>
            <Button x:Name="btnGetLocation" TextColor="White" BackgroundColor="SkyBlue" Text="Aktuelle Position"></Button>
        </StackLayout>
    </Grid>

</ContentPage>